<div class="modal-block">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel" >Новый дивизион</h5>
        <button type="button" class="close js-closeBtn" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form class="form-inline">
            <div class="form-group col-12">
                <input type="text" name="name" class="form-control modal-input col-md-6"  placeholder="Название">
                <input type="number" name="rounds" class="form-control modal-input col-md-6"  placeholder="Количество кругов">
            </div>
            <div class="form-group col-12">
                <input type="number" name="maxScore" class="form-control modal-input col-md-6"  placeholder="Счет встречи">
                <input type="number" name="maxGames" class="form-control modal-input col-md-6"  placeholder="Макс. игр для игрока">
            </div>
            <div class="form-group col-12 js-structureRegion">

            </div>
        </form>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button type="button" class="btn btn-primary js-submitBtn">Создать сезон</button>
        </div>
    </div>
</div>
