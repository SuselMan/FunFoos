<div class="modal-block">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New place</h5>
        <button type="button" class="close js-closeBtn" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form>
            <div class = "js-imageRegion form-group image-cropper-field"></div>
            <div class="form-group">
                <input type="text" name="name" class="form-control modal-input"  placeholder="name">
            </div>
            <div class="form-group">
                <input type="text" name="address" class="form-control modal-input"  placeholder="address">
            </div>
            <div class="form-group">
                <input type="text" name="comment" class="form-control modal-input"  placeholder="comment">
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button type="button" class="btn btn-primary js-submitBtn">Create place</button>
        </div>
    </div>
</div>