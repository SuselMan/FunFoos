<div class="modal-block">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Новый игрок</h5>
        <button type="button" class="close js-closeBtn" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form>
            <div class = "js-imageRegion form-group image-cropper-field"></div>
            <div class="form-group">
                <input type="text" name="firstName" class="form-control modal-input"  placeholder="Имя">
            </div>
            <div class="form-group">
                <input type="text" name="secondName" class="form-control modal-input"  placeholder="Фамилия">
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <div class="form-group">
            <button type="button" class="btn btn-primary js-submitBtn">Создать игрока</button>
        </div>
    </div>
</div>

